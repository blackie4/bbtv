<%= include ./includes/header.ejs %>

	<div class="row">
		<% videos.forEach(function(item){ %>
		    <div class="col-md-2">
		   		<div class="thumbnail">
		   			<a href="/video/<%= item._id %>">
						<img src="<%= item.poster %>" alt="<%= item.title %>">
		   			</a>
		   			<div class="caption">
		   				<h3><%= item.title %></h3>
		   				<p>
		   					<a href="/video/<%= item._id %>" class="btn btn-primary" .role="button">观看预告片</a>
		   				</p>
		   			</div>
		   		</div>
		    </div>
		<% }) %>
	</div>

<%= include ./includes/footer.ejs %>